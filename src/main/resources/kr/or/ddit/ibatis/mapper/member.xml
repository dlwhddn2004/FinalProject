			(#mem_id#,
			#category_no#,
			#notification_no#,
			#mem_pass#,
			#mem_name#,
			#mem_mail#,
			#mem_addr#,
			#mem_tel#,
			#mem_bankno#,
			#mem_businessno#,
			#mem_identityauthentication#)
	</insert>
		<update id="updateMember" parameterClass="memberVO">
