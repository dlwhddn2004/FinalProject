	<update id="deleteMember" parameterClass="map">
		update member
		set
		mem_delete = 'y'
		where mem_id = #mem_id#
	</update>

	<update id="updateMember" parameterClass="memberVO">
		update member
		set
		mem_pass = #mem_pass#
		, mem_add1 = #mem_add1#
		, mem_add2 = #mem_add2#
		, mem_hometel = #mem_hometel#
		, mem_hp = #mem_hp#
		, mem_mail = #mem_mail#
		, mem_job = #mem_job#
		, mem_like = #mem_like#
		where mem_id = #mem_id#
	</update>

