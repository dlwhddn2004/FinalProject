<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="issueboard">
	<typeAlias alias="issueboardVO" type="kr.or.ddit.vo.IssueboardVO" />
	
	<sql id="selectAll">
		<!-- SELECT b.*
		FROM (
		         SELECT ROWNUM r,
		                ISSUE_NO,
		                PROJECT_NO,
		                MEM_ID,
		                ISSUE_TITLE,
		                ISSUE_CONTENT,
		                TO_CHAR(success_regdate, 'YYYY-MM-DD') ISSUE_REGDATE,
		                ISSUE_HIT
		         FROM (
		                  SELECT *
		                  FROM ISSUE_BOARD) a
		     ) b -->
		    select  ISSUE_BOARD.*, PROJECT.PROJECT_NO
			from ISSUE_BOARD
			left join PROJECT
			on ISSUE_BOARD.PROJECT_NO = PROJECT.PROJECT_NO;
	</sql>
	
	<select id="issueboardList" resultClass="issueboardVO">
		<include refid="selectAll"/>
	</select>
	
	
</sqlMap>

 


